---
import { reviews } from '../constans';
import ReviewCard from '../components/ReviewCard.astro';
---

<section>
	<div class='max-container'>
		<h3 class='font-palanquin text-center text-4xl font-bold'>
			What Our <span class='text-coral-red'>Customers</span> Say?
		</h3>
		<p class='info-text m-auto mt-4 max-w-lg text-center'>
			Hear genuine stories from our satisfied customers about their exceptional experiences
			with us.
		</p>

		<div class='mt-24 flex flex-1 justify-evenly items-center max-lg:flex-col gap-14'>
			{reviews.map((review) => <ReviewCard data-id={review.customerName} {...review} />)}
		</div>
	</div>
</section>
