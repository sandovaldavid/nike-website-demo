---
import { Image } from 'astro:assets';
import { star } from '../assets/icons';

interface Props {
	imgURL: ImageMetadata;
	customerName: string;
	rating: number;
	feedback: string;
}

const { imgURL, customerName, rating, feedback }: Props = Astro.props;
---

<div class='flex justify-center items-center flex-col'>
	<Image
		src={imgURL}
		alt='customer'
		width={120}
		height={120}
		class='rounded-full object-cover w-[120px] h-[120px]'
	/>
	<p class='mt-6 max-w-sm text-center info-text'>{feedback}</p>
	<div class='mt-3 flex justify-center items-center gap-2.5'>
		<Image src={star} alt='rating' width={24} height={24} class='object-contain m-0' />
		<p class='text-xl font-montserrat text-slate-gray'>({rating})</p>
	</div>
	<h3 class='mt-1 font-palanquin text-3xl text-center font-bold'>{customerName}</h3>
</div>
