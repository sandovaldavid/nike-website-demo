---
import { Image } from 'astro:assets';

interface Props {
	imgURL: ImageMetadata;
	label: string;
	subtext: string;
}

const { imgURL, label, subtext }: Props = Astro.props;
---

<div class='flex-1 sm:w-[350px] sm:min-w-[350px] w-full rounded-3xl shadow-3xl px-10 py-16'>
	<div class='size-11 flex justify-center items-center bg-coral-red rounded-full'>
		<Image src={imgURL} alt={label} width={24} height={24} />
	</div>
	<h3 class='mt-5 font-palanquin text-3xl leading-normal font-bold'>{label}</h3>
	<p class='mt-3 break-words font-montserrat text-lg leading-normal text-slate-gray'>
		{subtext}
	</p>
</div>
